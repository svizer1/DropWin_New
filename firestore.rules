rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ────────────────────────────────────────────────
    // Коллекция users
    // ────────────────────────────────────────────────
    match /users/{userId} {
      // Пользователь может читать и создавать свой профиль
      allow read, create: if request.auth != null && request.auth.uid == userId;
      
      // Пользователь может обновлять свой профиль (баланс, инвентарь и т.д.)
      // ВНИМАНИЕ: Это позволяет клиенту менять баланс. Для продакшена лучше использовать Cloud Functions.
      allow update: if request.auth != null && request.auth.uid == userId;

      // Правило для реферальной системы: любой авторизованный пользователь может начислить бонус рефереру
      allow update: if request.auth != null &&
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['balance', 'referralCount', 'referralEarnings']) &&
        request.resource.data.balance is number &&
        request.resource.data.balance == (resource.data.balance is number ? resource.data.balance : 0) + 10 &&
        request.resource.data.referralCount is int &&
        request.resource.data.referralCount == (resource.data.referralCount is int ? resource.data.referralCount : 0) + 1 &&
        request.resource.data.referralEarnings is int &&
        request.resource.data.referralEarnings == (resource.data.referralEarnings is int ? resource.data.referralEarnings : 0) + 10;

      // Специфичное правило для админа (если требуется дополнительная логика)
      allow update: if userId == 'N7uykI0l7sPXyrjYfuWuPHoJ25i2' &&
        request.auth != null &&
        request.resource.data.balance is number &&
        request.resource.data.balance > resource.data.balance &&
        (
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['balance']) ||
          (
            'cryptoTransactions' in request.resource.data.diff(resource.data).affectedKeys() &&
            request.resource.data.cryptoTransactions is list &&
            request.resource.data.cryptoTransactions.size() > resource.data.cryptoTransactions.size() &&
            request.resource.data.diff(resource.data).affectedKeys().hasOnly(['balance', 'cryptoTransactions'])
          )
        );
        
      // Админ может читать любой профиль (или любой авторизованный, как было в оригинале)
      allow read: if request.auth != null; 
    }

    // ────────────────────────────────────────────────
    // Коллекция payments
    // ────────────────────────────────────────────────
    match /payments/{paymentId} {
      allow read: if request.auth != null && (
        resource.data.userId == request.auth.uid ||
        request.auth.uid == 'N7uykI0l7sPXyrjYfuWuPHoJ25i2'
      );
      
      // Исправлено: теперь разрешаем создание, если передан paymentId
      allow create: if request.auth != null
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.paymentId is string
        && request.resource.data.paymentId.size() > 5
        && request.resource.data.amount is number
        && request.resource.data.amount >= 50
        && request.resource.data.status == 'pending';
        
      allow update: if request.auth != null && (
        resource.data.userId == request.auth.uid ||
        request.auth.uid == 'N7uykI0l7sPXyrjYfuWuPHoJ25i2'
      );
      
      allow delete: if request.auth != null && (
        resource.data.userId == request.auth.uid ||
        request.auth.uid == 'N7uykI0l7sPXyrjYfuWuPHoJ25i2'
      ) && resource.data.status == 'pending';
    }

    // ────────────────────────────────────────────────
    // Коллекция cryptoPrices
    // ────────────────────────────────────────────────
    match /cryptoPrices/{coinId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // ────────────────────────────────────────────────
    // Коллекция battles
    // ────────────────────────────────────────────────
    match /battles/{battleId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null
        && request.resource.data.creator == request.auth.uid
        && request.resource.data.player1 == request.auth.uid
        && request.resource.data.player2 == null
        && request.resource.data.status == 'open';
        
      allow update: if request.auth != null
        && (
          (resource.data.status == 'open'
            && request.resource.data.player2 == request.auth.uid
            && request.resource.data.status == 'started'
            && request.resource.data.player1 != request.auth.uid)
          ||
          (resource.data.status == 'started'
            && request.resource.data.status == 'finished'
            && request.resource.data.player1Items is list
            && request.resource.data.player2Items is list)
          ||
          (resource.data.status == 'finished'
            && (
              (request.auth.uid == resource.data.player1
                && (
                  (request.resource.data.player1Claimed == true && resource.data.player1Claimed == false)
                  ||
                  (request.resource.data.player1Saved == true && resource.data.player1Saved == false)
                ))
              ||
              (request.auth.uid == resource.data.player2
                && (
                  (request.resource.data.player2Claimed == true && resource.data.player2Claimed == false)
                  ||
                  (request.resource.data.player2Saved == true && resource.data.player2Saved == false)
                ))
            ))
        );
        
      allow delete: if request.auth != null
        && resource.data.creator == request.auth.uid
        && resource.data.status == 'open';
    }

    // ────────────────────────────────────────────────
    // Коллекция promocodes
    // ────────────────────────────────────────────────
    match /promocodes/{code} {
      allow read: if request.auth != null;
      // Создание и удаление только для админа
      allow create, delete: if request.auth != null && request.auth.uid == 'fB5LvM4j5yVkcBE0c6eyvhV4WG02';
      // Обновление (активация) разрешено пользователям
      allow update: if request.auth != null;
    }

    // ────────────────────────────────────────────────
    // Коллекция raffles (Добавлено для исправления ошибки)
    // ────────────────────────────────────────────────
    match /raffles/{raffleId} {
      // Чтение разрешено всем авторизованным пользователям
      allow read: if request.auth != null;
      // Запись (создание/обновление) разрешена всем авторизованным (для участия)
      allow write: if request.auth != null;
    }

    match /active_raffles/{raffleId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
